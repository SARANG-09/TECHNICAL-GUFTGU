pipeline {
    agent any
    stages {
        stage('git pull') {
            steps {
                git 'https://github.com/deepak-umre/studentapp.ui.git'
            }
        }
        stage('mvn build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('sonar test') {
            steps {
                echo "Testing with SonarQube"
                sh '''
               mvn clean verify sonar:sonar \
                -Dsonar.projectKey=demo \
                -Dsonar.host.url=http://16.171.232.120:9000 \
                -Dsonar.login=sqp_7448831095284942b1d99113bcfa9901458a72ca
                '''
            }
         }
         stage('deploy') {
            steps {
                echo "deploy on tomcat "
                sh '''
                cp -r  /var/lib/jenkins/workspace/demo/target/*.war /opt/apache-tomcat-8.5.99/webapps/
                '''
            }
         }
    }
}
